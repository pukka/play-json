# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page

GET     /                             controllers.Application.index()
POST    /addTask                      controllers.Application.addTask()
POST    /searchJson                   controllers.Application.searchJson()
POST    /delete                       controllers.Application.deleteJson()
POST    /updateJson                   controllers.Application.updateJson()

GET     /                           controllers.Application.index()
POST    /addTask                    controllers.Application.addTask()
POST    /searchJson                 controllers.Application.searchJson()

# Users

GET     /users/add                  controllers.Users.newUser()
POST    /users/add                  controllers.Users.addUser()
GET     /users/allusers             controllers.Users.allUsers()

# login
GET     /login                      controllers.Users.login()
POST    /login                      controllers.Users.authenticate()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
